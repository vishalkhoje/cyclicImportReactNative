{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "removeComments": true,
    "sourceMap": true,
    "noResolve": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "types": [
      "node", "react-native"
    ],
    "lib": [
      "ES2015",
      "es2015",
      "es2016",
      "es2017",
      "es5",
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "node_modules/**/*"
  ]
}